@model IEnumerable<ProyectoFinal.Models.Pacientes>

@{
    ViewBag.Title = "Tabla Pacientes";
}

<h2>Tabla Pacientes</h2>
<div>
    @using (Html.BeginForm("Index", "Pacientes", FormMethod.Post))
    {
        <h5>Consultar</h5>
        <div class="row">
            <select name="select" class="form-control col col-lg-2" required="required">
                <option value="">Selecciona</option>
                <option value="Nombre">Nombre</option>
                <option value="Cedula">Cedula</option>
                <option value="Asegurado">Asegurado</option>
            </select>

            @Html.TextBox("buscar", "", new { @class = "form-control col-md-4", placeholder = "Busqueda", required = "required" })
            
            <div class="col-2">
                <button type="submit" class="btn btn-danger">Buscar</button>
            </div>
        </div>
    }
</div>
<p>
    @Html.ActionLink("--Create New ", "Create")
    @Html.ActionLink("--Print", "Imprimir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Cédula")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asegurado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asegurado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdPacientes }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdPacientes }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdPacientes })
            </td>
        </tr>
    }

</table>
