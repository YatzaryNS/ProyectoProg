@model IEnumerable<ProyectoFinal.Models.Ingresos>

@{
    ViewBag.Title = "Tabla Ingresos";
}

<h2>Tabla Ingresos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="Altas" method="post">
    <input type="text" name="busqueda" placeholder="Valor a buscar" class="form-horizontal" />
    <input type="submit" value="BUSCAR" class="btn-danger" />
</form>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número Habitación")
        </th>
        <th>
            @Html.DisplayName("Nombre Paciente")
        </th>
        <th>
            @Html.DisplayName("Fecha de ingreso")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Habitaciones.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pacientes.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdIngresos }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdIngresos }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdIngresos })
            </td>
        </tr>
    }

</table>
