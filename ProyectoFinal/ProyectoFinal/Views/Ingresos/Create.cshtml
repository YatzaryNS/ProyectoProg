                @Html.ValidationMessageFor(model => model.Habitacion_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha_Ingreso,"Fecha de ingreso", htmlAttributes: new { @class = "control-label col-md-2" })
